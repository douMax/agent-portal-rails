<div class="ui form">
  
<%= form_for(document, html:{multipart: true}) do |f| %>

  <div class="field required">
    <%= f.label "File" %>
    <%= f.cl_image_upload :url, {html: {id:"document-upload"}} %>
  </div>

  <div class="field required">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>


  <div class="field">
    <%= f.label :category %>
  <%= f.select :category, Document.categories.map { |key, value| [key.humanize, key] }, {}, class: "ui dropdown" %>
  </div>


  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => 3 %>
  </div>


  <%= f.hidden_field :user_id, value: @current_user.id %>

  <div class="actions">
    <%= f.submit class:"ui primary button" %>
  </div>
<% end %>
</div>