
<div class ="ui three column middle aligned center aligned grid">

  <div class="column">

    <h1 class="ui header">Log-in to your account</h1>
    <%= form_tag(login_path, class: 'ui large form')  do  %>
     <div class="ui padded stacked segment">
       <div class="field">
         <div class="ui left icon input">
           <i class="user icon"></i>
           <%= text_field_tag :name, nil, placeholder: "username" %>
         </div>
       </div>

       <div class="field">
         <div class="ui left icon input">
           <i class="lock icon"></i>
           <%=  password_field_tag :password, nil, placeholder: "password" %>
         </div>
       </div>

       <%= submit_tag "Login", class: 'ui fluid button primary' %>

     </div>
    <% end %>

    <% if flash[:error].present? %>
      <div class="ui error message">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>



  </div>
</div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   