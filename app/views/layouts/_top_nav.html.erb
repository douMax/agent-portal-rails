<div class="ui top fixed menu">
  <a class="header item project-logo">
    <img src="/assets/naia-broadbeach.png" alt=""><span>Naia, Broadbeach</span>
  </a>
      
  <div class="item">
    <%= link_to "Marketing Colleteral", documents_path %>
  </div>
  <div class="item">
    <%= link_to "Stock List", "/projects/1/lots" %>
  </div>

  

  <div class="right menu">
    <% if @current_user.present? && (@current_user.is_sales_admin || @current_user.is_admin) %>
      <div class="item">
        <%= link_to "Manage Users", users_path %>
      </div>
    <% end %>

    <% if @current_user.present? %>
    <div class="ui simple dropdown item">
        Hi, <%= @current_user.name || @current_user.email %>
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="item">
            <%= link_to "My Account", user_path(@current_user) %>
          </div>
          <div class="item">
            <%= link_to "Log out", login_path, data:{:confirm => "Are you sure you want to Logout?"}, :method => :delete %>
          </div>
        </div>
    </div>
    <% end %>
  </div>
  
</div>